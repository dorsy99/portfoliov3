// Using `important` due to https://github.com/vuejs/vuepress/issues/1099

// global-components/BaseListLayout
.ui-post-title a
  color $textColor !important

  &:hover
    color $accentColor !important

.ui-post-summary, .ui-post-date
  color darken($textColor, 20%) !important

// layouts/Post
.vuepress-blog-theme-content
  font-size 18px !important
  background-color transparent !important
  color inherit !important

  code
    //background-color rgba(29,20,20,1)
    background-color $inlineCodeBgColor


@media (min-width: 959px)
  .vuepress-blog-theme-content
    box-shadow 0 10px 20px rgba(255, 255, 255, 0.05), 0 6px 6px rgba(255, 255, 255, 0.07) !important

// components/Toc
.vuepress-toc .vuepress-toc-item
  a
    color $textColor !important

  &.active a
    color $accentColor !important

.markdown-body
  color $textColor !important